# Copy this file to .env and fill in your actual values

# LinkedIn OAuth credentials (required)
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://127.0.0.1:5000/accounts

# Flask secret key (required for sessions)
SECRET_KEY=your-random-secret-key-here

# Database configuration (optional, defaults to SQLite)
DATABASE_URL=sqlite:///instance/posts.db

# Other platform credentials (optional, for future implementations)
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret
# FACEBOOK_APP_ID=your_facebook_app_id
# FACEBOOK_APP_SECRET=your_facebook_app_secret
